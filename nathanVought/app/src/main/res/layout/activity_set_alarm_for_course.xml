<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="c196.com.nathanvought.SetAlarmForCourse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">
        <TextView
            android:text="Nathan Vought "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0" />
        <TextView
            android:text="Set Course Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0" />
        <Button
            android:text="Home"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="viewHome"
            android:layout_weight="0"/>
        <Button
            android:text="Back"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="backCourses"
            android:layout_weight="0"/>
        <EditText
            android:id="@+id/etVal"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Course ID"
            android:textAlignment="center"
            android:inputType="phone" />
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="Enter Course ID" />
        <Button
            android:id="@+id/btnSetAlarm"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="setNotificationTime"
            android:text="Set Alarm" />
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Sets an alarm notification for the start and end date at 8:00am the day of." />
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="If the start or end date is the same date as today notification happens after a few seconds" />
    </LinearLayout>
</ScrollView>

