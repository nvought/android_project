<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top">

        <TextView
            android:text="Nathan Vought "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0" />
        <TextView
            android:text="Edit Terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0" />
        <Button
            android:text="Home"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="viewHome"
            android:layout_weight="0"/>
        <Button
            android:text="Back"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="backEditTerms"
            android:layout_weight="0"/>
        <EditText
            android:id="@+id/editTermId"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="phone"/>
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Term ID"/>
        <EditText
            android:id="@+id/edtTermTitle"
            android:layout_width="400dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Term Title"/>
        <EditText
            android:id="@+id/editTermsStartDate"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="MM-DD-YYYY"
            android:textAlignment="center"
            android:inputType="date"/>
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="Start Date"/>
        <EditText
            android:id="@+id/editTermsEndDate"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="MM-DD-YYYY"
            android:textAlignment="center"
            android:inputType="date"/>
        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:text="End Date"/>
        <Button
            android:text="EDIT"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:id="@+id/editTerms"
            android:layout_weight="0"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="400dp"
            android:textSize="30sp"
            android:text=""
            android:id="@+id/editTermsTextView" />
    </LinearLayout>
</ScrollView>
