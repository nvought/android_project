<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top">

        <TextView
            android:text="Nathan Vought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0" />
        <TextView
            android:text="View Terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0" />
        <Button
            android:text="Home"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="viewHome"
            android:layout_weight="0"/>
        <Button
            android:text="Back"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:onClick="backViewTerms"
            android:layout_weight="0"/>
        <EditText
            android:id="@+id/byTermId"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:inputType="phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Term ID"
            android:layout_weight="0" />
        <Button
            android:text="Find By ID"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="40sp"
            android:id="@+id/viewTermById"
            android:layout_marginTop="15dp"
            android:layout_weight="0"/>
        <TextView
            android:id="@+id/viewTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="0" />
    </LinearLayout>
</ScrollView>
